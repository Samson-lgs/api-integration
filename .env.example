# ============================================================================
# AIR QUALITY MONITORING SYSTEM - ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# ============================================================================

# ----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------------------------------------
DATABASE_URL=postgresql://username:password@localhost:5432/air_quality_db
# For Render or cloud services, use the full connection string provided

# Docker PostgreSQL settings
POSTGRES_DB=air_quality_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# ----------------------------------------------------------------------------
# Flask Configuration
# ----------------------------------------------------------------------------
FLASK_ENV=development
FLASK_APP=backend/api.py
SECRET_KEY=your-secret-key-here-change-in-production
PORT=5000

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
API_BASE_URL=http://localhost:5000/api
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost

# ----------------------------------------------------------------------------
# CPCB API (Data Collection)
# ----------------------------------------------------------------------------
CPCB_API_KEY=579b464db66ec23bdd000001eed35a78497b4993484cd437724fd5dd

# Additional Data Source APIs (optional)
OPENWEATHER_API_KEY=your_openweather_api_key_here
WAQI_API_KEY=your_waqi_api_key_here

# ----------------------------------------------------------------------------
# Machine Learning Models
# ----------------------------------------------------------------------------
MODEL_PATH=./models
ML_MODEL_VERSION=1.0
AUTO_RETRAIN=true
RETRAIN_INTERVAL_HOURS=24
MIN_NEW_SAMPLES=100
PERFORMANCE_THRESHOLD=0.1

# ----------------------------------------------------------------------------
# Data Collection Settings
# ----------------------------------------------------------------------------
COLLECTION_INTERVAL_MINUTES=60
COLLECTION_INTERVAL_HOURS=1
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ----------------------------------------------------------------------------
# Frontend Configuration
# ----------------------------------------------------------------------------
VITE_API_URL=http://localhost:5000

# ----------------------------------------------------------------------------
# Docker Configuration
# ----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=air_quality

# ----------------------------------------------------------------------------
# Monitoring & Health Checks
# ----------------------------------------------------------------------------
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL_SECONDS=30

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
ALLOWED_HOSTS=localhost,127.0.0.1

# ----------------------------------------------------------------------------
# Production Settings (uncomment for production)
# ----------------------------------------------------------------------------
# FLASK_ENV=production
# DEBUG=False
# TESTING=False
# CORS_ORIGINS=https://your-production-domain.com

